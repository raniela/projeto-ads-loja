<div id="mercadoriaErro">
    <p>Erro</p>    
</div>

<div id="mercadoriaSucesso">
    <p>Sucesso</p>    
</div>

<script>
    
    var url = "";
    $(function(){       
                
        $( "#mercadoriaSucesso" ).dialog({
            autoOpen: false
        });
        
        $( "#mercadoriaErro" ).dialog({
            autoOpen: false
        });
                
        $("#dcMercadoria").dialog({
            resizable: false,
            height:250,
            width:500,
            modal: true,
            autoOpen: false,
                
            buttons: {
                "Ok": function() {
                    $.get(url, null, function(retorno){
                        if(retorno.tipo == 'sucesso'){
                            $('#mercadoriaSucesso').html(retorno.msg);
                            $('#mercadoriaSucesso').dialog("open");
                            $('#mercadoriaSucesso').dialog({
                                buttons: {
                                    Ok: function() {
                                        $( this ).dialog( "close" );
                                    }
                                }
                            });
                                
                            $('#divResMerc').load('/mercadoria/grid/nome/' + $('#nomeMercadoria').val());
                                
                        } else {
                            $('#mercadoriaErro').html(retorno.msg);
                            $('#mercadoriaErro').dialog("open");
                            $('#mercadoriaErro').dialog({
                                buttons: {
                                    Ok: function() {
                                        $( this ).dialog( "close" );
                                    }
                                }
                            });
                            $('#divResMerc').load('/mercadoria/grid/nome/' + $('#nomeMercadoria').val());
                        }                    
                    }, 'json');
                    $( this ).dialog("close");
                    
                },
                Cancel: function() {
                    $('#divResMerc').load('/mercadoria/grid/nome/' + $('#nomeMercadoria').val());
                    $( this ).dialog( "close" );
                        
                }
                    
            }
                
        });
                
        $('.pagination a').click(function(){
           
            var href = $(this).attr('href');
            $('#divResMerc').load(href);
            return false;
        });
        
        $('.linkEditar').click(function(){
            var url = $(this).attr('href');
            $('#ui-tabs-8').load(url);
            return false;
        });
        
        $('.btExcluir').click(function(){
            
            url = $(this).attr('href');
            $("#dcMercadoria").dialog("open");
            
            return false;
        });
        
    })
    
</script>