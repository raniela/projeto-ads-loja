    <p>Sucesso</p>
</div>


<script>
    var dataForm = <?php echo Zend_Json::encode(array('usuario' => $this->usuario)); ?>;
    
    $(function() {        
        $( "#sucessoUsu" ).dialog({
            autoOpen: false
        });
       
        $('#formUsu').populate(dataForm);
        <?php if(!empty($this->usuario['senha'])) { ?>
              $('#senha2').val('<?=$this->usuario['senha']?>');  
        <?php } ?>
            
        $('#formUsu').validate({
            submitHandler: function(form){
                jQuery(form).ajaxSubmit({
                    dataType:  'json', 
                    success: function(r){
                        if(r.tipo == 'sucesso'){                    
                            $('#sucessoUsu p').html(r.msg);                            
                            $( "#sucessoUsu" ).dialog({
                                modal: true,
                                buttons: {
                                    Ok: function() {
                                        $(this).dialog("close");
                                        window.location = r.url;
                                    }
                                }
                            });
                            $('#sucessoUsu').dialog("open");
                            //$('#divMsg').html(r.msg)
                            //window.location = r.url;
                        } else {
                            $('#sucessoUsu p').html(r.msg);                            
                            $( "#sucessoUsu" ).dialog({
                                modal: true,
                                buttons: {
                                    Ok: function() {
                                        $(this).dialog("close");
                                        //window.location = r.url;
                                    }
                                }
                                
                            });
                            $('#sucessoUsu').dialog("open");
                        }
          
                    } 
                });
            }
        });
        
        $('#btVoltarUsuario').click(function(){
            $('#ui-tabs-3').load('/usuario/index/menu/3');
        })
        
        
    });
</script>